<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="0dp"
    app:cardCornerRadius="5dp"
    tools:targetApi="KITKAT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shadow_card_view"
        android:orientation="horizontal">

        <Button
            android:id="@+id/item_history_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_user_history"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Transaksi"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:iconPadding="-15dp" />

        <Button
            android:id="@+id/as_admin_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_as_admin"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Admin"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:iconPadding="-15dp" />

        <Button
            android:id="@+id/as_koor_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_as_coordinator"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Koordinator"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:iconPadding="-15dp" />

        <Button
            android:id="@+id/as_user_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:drawableTopCompat="@drawable/ic_as_user"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Warga"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:iconPadding="-15dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>