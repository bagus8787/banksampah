<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".admin.DetailUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        tools:targetApi="o">

        <LinearLayout
            android:id="@+id/li_1"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_account_circle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/li_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Nama"/>

            <EditText
                android:id="@+id/it_nama"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:text="Bagus"
                android:focusable="false"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="Jenis Kelamin"/>

            <EditText
                android:id="@+id/it_jenkel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:focusable="false"
                android:background="@drawable/background_text"
                android:text="Laki - Laki"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="No Telepon"/>

            <EditText
                android:id="@+id/it_no_tlp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:focusable="false"
                android:background="@drawable/background_text"
                android:text="No Telepon"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="Email"/>

            <EditText
                android:id="@+id/it_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:focusable="false"
                android:background="@drawable/background_text"
                android:text="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:text="Alamat"/>

            <EditText
                android:id="@+id/it_alamat"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:focusable="false"
                android:background="@drawable/background_text"
                android:text="Alamat"
                android:inputType="text|textMultiLine"
                android:minLines="3"
                android:paddingHorizontal="16dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_button"
                android:text="Update Profil"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

        </LinearLayout>



    </RelativeLayout>

</ScrollView>