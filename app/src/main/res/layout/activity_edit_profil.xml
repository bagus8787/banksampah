<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".user.EditProfilActivity">

    <RelativeLayout
        app:srcCompat="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        tools:targetApi="o">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profil"
                android:textColor="@android:color/black"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kosongkan field jika tidak ingin mengubah" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="2dp"
                android:text="Nama"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/it_nama_p"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:hint="Nama"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/lbl_it_gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Jenis Kelamin"/>

            <Spinner
                android:padding="10dp"
                android:id="@+id/it_sex_p"
                android:entries="@array/jenis_kelamin"
                android:background="@drawable/background_text"
                android:hint="Jenis Kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Nomor Telepon"/>

            <EditText
                android:id="@+id/it_nope_p"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:hint="No Telepon"
                android:inputType="number"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Email"/>

            <EditText
                android:id="@+id/it_email_p"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:editable="false"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Password"/>

            <EditText
                android:id="@+id/it_password_p"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Password Confirm"/>

            <EditText
                android:id="@+id/it_password_confirm_p"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_edit_text"
                android:background="@drawable/background_text"
                android:hint="Password Confirm"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/lbl_it_rt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="RT"/>

            <Spinner
                android:id="@+id/it_rt_p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/rt_list"
                android:background="@drawable/background_text"
                android:padding="10dp" />

            <TextView
                android:id="@+id/lbl_it_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="2dp"
                android:textColor="@android:color/black"
                android:text="Alamat"/>

            <EditText
                android:id="@+id/it_address_p"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/background_text"
                android:hint="Alamat"
                android:inputType="text|textMultiLine"
                android:paddingHorizontal="16dp"
                android:minLines="3"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                tools:targetApi="o" />

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_button"
                android:text="Update Profil"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>